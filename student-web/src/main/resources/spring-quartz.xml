<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans    
                        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	<!-- 添加调度的任务bean 配置对应的class -->
	<bean id="testPrintSchedule" class="org.student.jobs.TestPrintSchedule" />

	<!--配置调度具体执行的方法 -->
	<bean id="testPrintDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="testPrintSchedule" />
		<property name="targetMethod" value="printSomething" />
		<property name="concurrent" value="false" />
	</bean>

	<!--配置调度执行的触发的时间 -->
	<bean id="testPrintTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="testPrintDetail" />
		<property name="cronExpression">
			<!-- 每天早上8点执行任务调度 -->
			<value>0 30 18 * * ?</value>
		</property>
		<!-- 不重复计数，只执行一次 -->
		<!-- <property name="repeatCount" value="0" /> -->
	</bean>

	<!-- 启动触发器的配置开始 -->
	<!-- quartz的调度工厂 调度工厂只能有一个，多个调度任务在list中添加 -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<!-- 所有的调度列表 -->
				<ref local="testPrintTrigger" />
			</list>
		</property>
	</bean>
</beans>